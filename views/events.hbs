{{#if isAdmin}}
<div class="container" id="addBox">
      <div class="row">

        <div class="col-md-6 offset-md-3">
          <div class="form">
            <form
              action="/events"
              method="POST"
              class="mt-4 border p-3 bg-light shadow"
            >
              <h3 class="mb-5 text-secondary">Add event</h3>
              <div class="row">
                <div class="mb-3 col-md-12">
                  <label>Event Name*</label>
                  <input
                    type="text"
                    id="event"
                    name="event"
                    class="form-control"
                    required
                  />
                </div>
                <div class="mb-3 col-md-12">
                  <label>Event Date*</label>
                  <input
                    type="text"
                    id="date"
                    name="date"
                    class="form-control"
                    required
                  />
                </div>
                <div class="mb-3 col-md-12">
                  <label>Description*</label>
                  <textarea
                    type="text"
                    name="description"
                    class="form-control"
                    rows="3"
                    required
                  ></textarea>
                </div>
                <div class="mb-3 col-md-6">
                  <label for="imageUrl" class="form-label">Attach Image</label>
                  <input type="imageUrl" name="imageUrl" id="imageUrl"/>
                </div>
                <div class="col-md-12">
                  <button class="btn btn-success float-end" type="submit">Add to Calendar</button>
                </div>
              </div>
            </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>

          <div class="container">
            <div class="row g-3">
              {{#each events}}
                {{> tempEvents event=this}}
  {{#if isAdmin}}
  <a class="btn btn-success" type="submit" href="/events/delete/{{event._id}}">Delete</a>
  <br>
  <a class="btn btn-success" type="submit" href="/events/update/{{event._id}}">Update</a>
  {{/if}}
              {{/each}}
          </div>
            </div> 

    {{#if message}}
